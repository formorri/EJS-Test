<%- include partials/header -%>
<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="postTitle">Title</label>
        <input type="text" class="form-control" name="postTitle" aria-describedby="enterTitle" placeholder="Enter Title"></input>
        <label for="postText">Post</label>
        <textarea type="text" class="form-control" name="postText" rows="4" aria-describedby="enterText" placeholder="Insert Entry Here"></textarea>
    </div>
    <button type="submit" class="btn btn-primary mb-2" name="button">Publish</button>
</form>
<%- include partials/footer -%>